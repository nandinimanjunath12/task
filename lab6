import kotlin.random.Random

// Function to roll one die
fun rollDie(): Int {
    return Random.nextInt(1, 7) // Generates number from 1 to 6
}

// Function to roll two dice and display results
fun rollDice() {
    val die1 = rollDie()
    val die2 = rollDie()

    println("Rolling the dice...")
    println("Die 1: $die1")
    println("Die 2: $die2")

    if (die1 == die2) {
        println("Wow! You rolled doubles! Lucky you!")
    } else {
        println("Nice roll! Try again!")
    }

    println("Total: ${die1 + die2}")
}

// Main function
fun main() {
    rollDice()
}
